# vim: filetype=muttrc

# color syntax: 
#     [object]     [foreground]   [background]    [regexp]
color normal	   white          default
color attachment   brightyellow   default
color hdrdefault   cyan           default
color indicator    black       cyan
color markers	   brightred      default
color quoted	   green          default
color signature    cyan           default
color status	   white         blue
color tilde	       blue           default
color tree	       red            default

color header	   brightred      default           ^From:
color header	   brightcyan     default           ^To:
color header	   brightcyan     default           ^Reply-To:
color header	   brightcyan     default           ^Cc:
color header	   brightblue     default           ^Subject:

# enphasized text
color body	green		default		"[*][-[:alnum:]]+[*]"
color body	green		default		"[ ]_[-[:alnum:]]+_([ ]|\.)"

# email addresses
color body         brightred      default         "[-a-zA-Z_0-9.+]+@[-a-zA-Z_0-9.]+"
# Ronald J Kimball's url regexp. mutt-user 04/05/28
color body	brightgreen	   default  \
	"(https?|ftp|gopher|finger)://([^"'"'"' \t\r\n)>.,!?&]\
	|[.,!?][^"'"'"' \t\r\n)>.,!?&]|&([^g]|$)|&g([^t]|$)|&gt([^;]|$))+"

# color index syntax: 
#           [foreground]   [background]    [pattern]
color index	blue           default           ~D
color index	magenta        default           ~T
color index cyan          default           ~N
color index red            default           ~F
