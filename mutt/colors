# vim: filetype=muttrc

# color syntax: 
#     [object]     [foreground]   [background]    [regexp]
color normal	   white          black
color attachment   brightyellow   black
color hdrdefault   cyan           black
color indicator    black       cyan
color markers	   brightred      black
color quoted	   green          black
color signature    cyan           black
color status	   white         blue
color tilde	       blue           black
color tree	       red            black

color header	   brightred      black           ^From:
color header	   brightcyan     black           ^To:
color header	   brightcyan     black           ^Reply-To:
color header	   brightcyan     black           ^Cc:
color header	   brightblue     black           ^Subject:

# enphasized text
color body	green		default		"[*][-[:alnum:]]+[*]"
color body	green		default		"[ ]_[-[:alnum:]]+_([ ]|\.)"

# email addresses
color body         brightred      default         "[-a-zA-Z_0-9.+]+@[-a-zA-Z_0-9.]+"
# Ronald J Kimball's url regexp. mutt-user 04/05/28
color body	brightgreen	   default  \
	"(https?|ftp|gopher|finger)://([^"'"'"' \t\r\n)>.,!?&]\
	|[.,!?][^"'"'"' \t\r\n)>.,!?&]|&([^g]|$)|&g([^t]|$)|&gt([^;]|$))+"

# color index syntax: 
#           [foreground]   [background]    [pattern]
color index	blue           black           ~D
color index	magenta        black           ~T
color index cyan          black           ~N
color index red            black           ~F
